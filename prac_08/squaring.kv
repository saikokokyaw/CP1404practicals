BoxLayout:
    orientation: 'vertical'

    # Top section with horizontal layout
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        padding: 10

        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False

        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)

        Label:
            id: output_label
            font_size: 48
            color: (1, 0.5, 0.5, 1)  # Pink color

    # Bottom section with a single label
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        Label:
            text: 'Enter a number and press "Square"'
            font_size: 24
